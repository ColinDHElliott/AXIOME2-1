<?xml version="1.0"?>
<axiome>
	<plugin name="aq_rep_set" type="rep_set">
		<input>
		</input>
		<!-- Define what the plugin is going to do -->
		<!-- Special variables available to "pick_rep_set" types: previous_output_file, current_output_file -->
		<process>
			<input name="seq_otus.txt"/>
			<input name="seq.fasta"/>
			<output name="rep_set.fasta"/>
			<command label="AXIOME Rep Set Builder" cmd="aq-mkrepset ${i} ${i} > ${o}" input="seq.fasta,seq_otus.txt" output="rep_set.fasta"/>
		</process>
		<!-- Version check command for involved programs -->
		<info>
			<command label="AXIOME Rep Set Builder" cmd=""/>
			<help text="Picks the most commonly occuring sequence from each OTU as the representative. Attempts to minimize RAM usage to a reasonable level, and may be preferable to QIIME methods on some systems."
		</info>
	</plugin>
</axiome>
