<?xml version="1.0"?>
<axiome>
	<plugin name="pcoa" type="analysis">
		<!-- Define what the plugin needs -->
		<!-- This is used to create the UI -->
		<input>
			<text label="Distance Method" name="distance" default="bray"/>
			<float label="Ellipsoid Confidence" name="ellipsoid" default="0" min="0" max="1"/>
		</input>
		<!-- Define what the plugin is going to do -->
		<!-- Special variables available to "source" types: previous_output_file, current_output_file -->
		<process>
			<input name="otu_table_auto.tab"/>
			<input name="metadata_mapping.txt"/>
			<output name="pcoa-bray-biplot.pdf" report_label="PCoA Ordination"/>
			<command label="PCoA Ordination" cmd="aq-pcoa -i ${i} -m ${i} -o ${o} -d ${v}" input="otu_table_auto.tab,metadata_mapping.txt" output="pcoa-${distance}-biplot.pdf" variable="${distance}"/>
		</process>
		<!-- Version check command for involved programs -->
		<info>
			<command label="PCoA Version" cmd="aq-pcoa -v"/>
			<help text="Principal Coordinates on rarefied OTU table. Ellipsoid confidence draws a percent confidence interval around each group of points. Set to 0 for no ellipsoid, 0.8 for 80% confidence, etc.. Valid distance measures: bray, euclidean, manhattan, canberra, jaccard, gower, altGower, morisita, horn, mountford, raup, binomial, chao."/>
		</info>
	</plugin>
</axiome>
