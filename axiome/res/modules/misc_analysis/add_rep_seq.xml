<?xml version="1.0"?>
<axiome>
	<plugin name="add_rep_seq" type="misc_analysis">
		<!-- Define what the plugin needs -->
		<!-- This is used to create the UI -->
		<input>
		</input>
		<!-- Define what the plugin is going to do -->
		<!-- Special variables available to "source" types: previous_output_file, current_output_file -->
		<process>
			<input name="rep_set.fasta"/>
			<input name="otu_table_auto.tab"/>
			<output name="otu_table_auto_with_seq.tab"/>
			<command label="Add rep sequences as final column to OTU table" cmd="aq-otuwithseqs ${i} ${i} > ${o}" input="rep_set.fasta,otu_table_auto.tab" output="otu_table_auto_with_seq.tab"/>
		</process>
		<!-- Version check command for involved programs -->
		<info>
			<command/>
			<help text="Generates an OTU table with the representative sequences for each OTU as the final column"/>
		</info>
	</plugin>
</axiome>
